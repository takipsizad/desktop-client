{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "allowJs": true,
    "lib": [
      "dom",
      "es2015",
      "es2015.collection",
      "es2015.iterable"
    ],
    "paths": {
      "@/*": [
        "*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./typings/*.d.ts"
  ]
}
